<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gitlab.laurensdv" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Test</name>
    <description>
        Some tests using ScalaJS with Cordova and Indigo Game Engine
    </description>
    <author email="laurensdv@gmail.com">Laurens De Vocht</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <preference name="AutoHideSplashScreen" value="true" />
    <platform name="ios">
        <allow-intent href="app:*" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="scheme" value="app" />
        <preference name="hostname" value="localhost" />
    </platform>
</widget>